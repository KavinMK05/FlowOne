<Window x:Class="WpfApp1.settings_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="600">
    <Canvas>
        <TextBlock Text="Pomodoro" FontFamily="Inter" FontSize="15" FontWeight="Medium" Canvas.Left="50" Canvas.Top="30"/>
        <TextBox Text="{Binding Pomodoro}" Width="40" Canvas.Left="450" 
                 Canvas.Top="30"/>
        <TextBlock Text="Break" FontFamily="Inter" FontSize="15" FontWeight="Medium" Canvas.Left="50" Canvas.Top="60"/>
        <TextBox Text="{Binding ShortBreak}" Width="40" Canvas.Left="450" 
         Canvas.Top="60"/>
        <Button Content="Save" Canvas.Bottom="20" Canvas.Right="30" Click="SaveSettings"/>
    </Canvas>
</Window>
