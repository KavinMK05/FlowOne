<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        WindowStyle="None" 
        ResizeMode="NoResize"
        
        AllowsTransparency="True" 
        Background="Transparent"
        Title="Flow One" Height="70" Width="300"
        Topmost="true">
    <Window.Resources>

    </Window.Resources>
    <Grid>

        <Border Name ="Start_window" Width="264" Height="65" Background="White" CornerRadius="15" MouseLeftButtonDown="DragRegion_mouseDown" Cursor="SizeAll">
            <!--Main Window Drop shadow Effect-->
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" Color="#a3a3a3" BlurRadius="7" />
            </Border.Effect>
            <Canvas>
                <!--Menu Icon-->
                <Image x:Name="menu_icon" Source="/assets/menu.png" Height="17" Canvas.Left="125" Canvas.Top="1" Cursor="Hand" Opacity="0" MouseLeftButtonDown="showSettings" />
                
                <!--Timer Display-->
                <TextBlock x:Name="Focus_timer" FontSize="36" FontFamily="Lato" Text="000 : 00" FontWeight="SemiBold" Canvas.Right="115" Canvas.Bottom="13" />
                
                <!--Play Button-->
                <Border x:Name="playButton" Background="#A9ABAD" CornerRadius="100" Height="35" Width="35" Cursor="Hand" Canvas.Left="212" Canvas.Top="15" MouseLeftButtonDown="StartButton_Click">
                    
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="0" BlurRadius="2" Color="LightGray"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Image x:Name="Play_icon" Source="/assets/Vector.png" Height="17"/>
                </Border>
                
                <!--Pause Button-->
                <Border x:Name="pauseButton" Background="#A9ABAD" CornerRadius="100" Height="35" Width="35" Cursor="Hand" Canvas.Left="212" Canvas.Top="15" MouseLeftButtonDown="PauseButton_Click" Visibility="Hidden">
                    <Border.RenderTransform>
                        <TranslateTransform x:Name="pauseBorderTranslateTransform" X="-35"/>
                    </Border.RenderTransform>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="0" BlurRadius="2" Color="LightGray"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Image x:Name="Pause_icon" Source="/assets/pause.png" Height="14"/>
                </Border>

                <!--Skip Button-->
                <Border x:Name="skipButton" Background="#A9ABAD" CornerRadius="100" Height="35" Width="35" Cursor="Hand" Canvas.Left="212" Canvas.Top="15" MouseLeftButtonDown="SkipButton_Click" Visibility="Hidden">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="0" BlurRadius="2" Color="LightGray"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Image x:Name="Skip_icon" Source="/assets/skip_final_icon.png" Height="20" />
                </Border>

                <!--Plus Button-->
                <Border x:Name="plusButton" Background="#A9ABAD" CornerRadius="100" Height="35" Width="35" Cursor="Hand" Canvas.Left="167" Canvas.Top="15" MouseLeftButtonDown="plusOneButton_Click" Visibility="Hidden">
                    
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="0" BlurRadius="2" Color="LightGray"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Image x:Name="Plus_icon" Source="/assets/plus_one.png" Height="30"/>
                </Border>

                <!--Stop Button-->
                <Border x:Name="stopButton" Background="#A9ABAD" CornerRadius="100" Height="35" Width="35" Cursor="Hand" Canvas.Left="212" Canvas.Top="15" MouseLeftButtonDown="StopButton_Click" Visibility="Hidden" Opacity="0">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="0" BlurRadius="2" Color="LightGray"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Image x:Name="Stop_icon" Source="/assets/stop_button.png" Height="15"/>
                </Border>

            </Canvas>
        </Border>
    </Grid>

</Window>
